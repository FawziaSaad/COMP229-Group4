<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Game Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Game Title"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="developerTextField">Developer</label>
                    <input type="text" class="form-control"
                    id="developerTextField"
                    placeholder="Enter the Game's Developer"
                    name="developer" required>
                </div>

                <div class="form-group">
                    <label for="releasedTextField">Year</label>
                    <input type="text" class="form-control"
                    id="releasedTextField"
                    placeholder="Enter the Year of Released"
                    name="released" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the Description of the Game"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                    id="priceTextField"
                    placeholder="Enter the Game's Price"
                    name="price" required>
                </div>

                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                <a href="/surveys" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>